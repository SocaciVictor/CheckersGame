<Application x:Class="CheckersGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:CheckersGame.ViewModels" 
             xmlns:view="clr-namespace:CheckersGame.Views">
    <Application.Resources>
        
        <DataTemplate DataType="{x:Type viewModel:MainMenuViewModel}">
            <view:MainMenuView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:PlayViewModel}">
            <view:PlayView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:LoadGameViewModel}">
            <view:LoadGameView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:AboutViewModel}">
            <view:AboutView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:GameViewModel}">
            <view:GameView/>
        </DataTemplate>

    </Application.Resources>
</Application>
